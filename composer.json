{
    "name": "alimpay/bill-query-platform",
    "description": "基于支付宝开发者账单查询的码支付平台",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "alipaysdk/easysdk": "^2.0",
        "alipaysdk/openapi": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.0",
        "phpseclib/bcmath_compat": "^2.0",
        "endroid/qr-code": "^5.0",
        "catfan/medoo": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AliMPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AliMPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "bill-query": "php tests/bill_query_test.php",
        "payment-test": "php tests/payment_test.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 